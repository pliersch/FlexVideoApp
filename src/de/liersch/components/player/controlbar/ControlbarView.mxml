<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="600" height="70">
	
	<s:Rect x="0" y="0" width="100%" height="100%">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry alpha="0.2" color="#000000" ratio="0"/>
				<s:GradientEntry alpha="1.0" color="#000000" ratio="1.0"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
			
	<s:Label id="timeLabel" y="38" right="170" color="0xCCCCCC"/>
	<s:HSlider id="sliderVolume" y="38" right="15" maximum="1" minimum="0" stepSize="0.1" value="0.5"/>	
	<s:Button id="buttonMaximize" y="30" left="10" buttonMode="true"
			  skinClass="de.liersch.skin.button.MaximizePlayerButton"/>
	<s:Button id="buttonMinimize" y="30" left="10" buttonMode="true" visible="false" 
			  skinClass="de.liersch.skin.button.MinimizePlayerButton"/>	
	<s:Button id="buttonPlay" visible="false" y="30" buttonMode="true" focusColor="#FF8170" 
			  horizontalCenter="0" skinClass="de.liersch.skin.button.PlayButton"/>
	<s:Button id="buttonPause" visible="false" y="30" buttonMode="true" horizontalCenter="0" 
			  skinClass="de.liersch.skin.button.PauseButton"/>
	<s:Button id="buttonMute" y="30" right="120" buttonMode="true"
			  skinClass="de.liersch.skin.button.UnMuteButton"/>
	<s:Button id="buttonUnMute" visible="false" y="30" right="120" buttonMode="false"
			  skinClass="de.liersch.skin.button.MuteButton"/>
	<s:Label id="buttonUpload" visible="false" y="35" left="50" buttonMode="true" fontSize="14"
			 fontWeight="bold" text="Upload" color="#9BAC99"/>
	<s:Label id="buttonFavorite" visible="false" y="35" left="112" buttonMode="true" fontSize="14"
			 fontWeight="bold" text="Favorit" color="#9BAC99"/>
	<mx:ProgressBar id="progressBar" y="-12" left="10" right="10" height="13" label=" "
					labelPlacement="top" mode="manual"/>
	
</s:Group>