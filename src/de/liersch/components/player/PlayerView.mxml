<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 xmlns:view="de.liersch.view.*" 
		 width="400" height="300" xmlns:controlbar="de.liersch.components.player.controlbar.*" >

	<mx:UIComponent id="mediaHolder" width="100%" height="100%"/>
	<controlbar:ControlbarView id="controlBar" left="0" right="0" bottom="0" height="70"/>

	<s:Rect left="0" right="0" top="0" bottom="0" alpha="1">
		<s:stroke>
			<s:SolidColorStroke caps="none" joints="miter" miterLimit="4" weight="1" color="#333333" />
		</s:stroke>
	</s:Rect>
	<s:Label id="errorLabel" visible="false" color="#FF0000" fontSize="14" fontWeight="bold"
			 horizontalCenter="0" text="Formatfehler! Video kann nicht abgespielt werden."
			 verticalCenter="-15"/>
	
</s:Group>
