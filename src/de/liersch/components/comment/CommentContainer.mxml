<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:fx="http://ns.adobe.com/mxml/2009"
		width="100%" height="100%" xmlns:skins="components.messageBoard.skins.*" 
		xmlns:comment="de.liersch.components.comment.*" >
	
	<s:Rect left="0" right="0" top="0" bottom="0">
		<s:fill>
			<s:SolidColor color="#000000"/>
		</s:fill>
	</s:Rect>

	<comment:CommentContentGroup id="contentGroup" x="0" y="0" width="100%"
								 height="100%" clipAndEnableScrolling="true"/>
	<s:VScrollBar id="vScrollBar" y="0" right="0" width="15" height="100%" fixedThumbSize="true"
				  skinClass="de.liersch.skin.vscrollbar.LibraryVerticalScrollbarSkin" 
				  viewport="{contentGroup}"/>
</s:Group>
